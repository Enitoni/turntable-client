{
  "name": "turnt",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "run-p --race --print-label dev:*",
    "dev:remix": "remix vite:dev",
    "dev:server": "cd server && cargo run",
    "dev:db": "cd server && docker compose -f compose-dev.yml up -d",
    "lint": "biome check .",
    "format": "biome check . --fix",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "generate:openapi": "openapi --input http://localhost:9050/api.json --output api --name TurntableApi"
  },
  "dependencies": {
    "@effect/schema": "^0.68.17",
    "@faker-js/faker": "^8.4.1",
    "@fontsource-variable/kufam": "^5.0.19",
    "@fontsource/lato": "^5.0.21",
    "@remix-run/node": "^2.10.2",
    "@remix-run/react": "^2.10.2",
    "@remix-run/serve": "^2.10.2",
    "effect": "^3.4.7",
    "isbot": "^4.4.0",
    "lucide-react": "^0.395.0",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.3.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@playwright/test": "^1.45.1",
    "@remix-run/dev": "^2.10.2",
    "@types/bun": "^1.1.6",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "chalk": "^5.3.0",
    "openapi-typescript-codegen": "^0.29.0",
    "postcss": "^8.4.39",
    "remix-routes": "^1.7.6",
    "tailwindcss": "^3.4.4",
    "ts-morph": "^23.0.0",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
