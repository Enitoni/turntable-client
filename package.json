{
  "name": "turnt",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "dev": "npm-run-all --parallel --race --print-label \"dev:*\"",
    "dev:remix": "remix vite:dev",
    "dev:server": "cargo run --manifest-path server/Cargo.toml",
    "lint": "biome check .",
    "format": "biome check . --fix",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "generate:api": "openapi --input http://localhost:9050/api.json --output api --name TurntableApi",
    "e2e": "playwright test"
  },
  "dependencies": {
    "@conform-to/react": "^1.1.5",
    "@conform-to/zod": "^1.1.5",
    "@effect/schema": "^0.68.27",
    "@faker-js/faker": "^8.4.1",
    "@fontsource-variable/kufam": "^5.0.20",
    "@fontsource/lato": "^5.0.22",
    "@radix-ui/react-slider": "^1.2.0",
    "@remix-run/node": "^2.11.2",
    "@remix-run/react": "^2.11.2",
    "@remix-run/serve": "^2.11.2",
    "effect": "^3.7.0",
    "isbot": "^4.4.0",
    "lucide-react": "^0.395.0",
    "polished": "^4.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.5.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@playwright/test": "^1.46.1",
    "@remix-run/dev": "^2.11.2",
    "@remix-run/server-runtime": "^2.11.2",
    "@types/bun": "^1.1.8",
    "@types/node": "^20.16.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "drizzle-orm": "^0.31.4",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.29.0",
    "postcss": "^8.4.42",
    "postgres": "^3.4.4",
    "remix-routes": "^1.7.7",
    "tailwindcss": "^3.4.10",
    "ts-morph": "^23.0.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "vite-env-only": "^3.0.3",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
